# SKEMARAJA Auto Check-in Configuration
# Copy this file to .env and fill in the values

# Kode Kantor untuk fetch pegawai dari API
KODE_KANTOR=004036057000000

# Check-in settings
STATUS=2
# 1 = WFH (Work From Home)
# 2 = WFO (Work From Office)
# 3 = Dinas Luar

SHIFT=1
# 1 = Shift 1
# 2 = Shift 2

# Geolocation (Gorontalo default)
LATITUDE=0.537831
LONGITUDE=123.058388
LOCATION_NAME=KSOP Gorontalo

# Schedule times (WITA timezone - UTC+8)
# Pagi: 07:00-08:00
# Siang: 12:05-13:00
# Sore: 17:00-18:00
CRON_PAGI=0 7 * * 1-5
CRON_SIANG=5 12 * * 1-5
CRON_SORE=0 17 * * 1-5

# Timezone
TIMEZONE=Asia/Makassar

# Fonnte WhatsApp (optional)
FONNTE_TOKEN=
# Get device token from fonnte.com

# Browser settings
HEADLESS=true
SLOW_MO=100

# Users file (auto-generated from API)
USERS_FILE=./users.json

# Screenshot on error
SCREENSHOT_DIR=./screenshots
